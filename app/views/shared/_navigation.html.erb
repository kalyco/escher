<!-- topbar-content -->
<% if request.original_fullpath == "/pieces/show" %>
	<div class="topbar-wrapper short">
	<% @home_link = 1 %>
<% else %>
	<div class="topbar-wrapper">
	<% @home_link = 0 %>
<% end %>
	<div id="topbar-container" class="container-fluid">
		<div class='row'>
			<div class='nav navbar-left'>

			    <%= link_to menu_path(home: @home_link), { class: 'toggle-menu', remote: true, 'data-toggle': 'modal', 'data-target': '#modal-window' } do %>
			      <i class='glyphicon glyphicon-menu-hamburger col-xs-3'></i>
			    <% end %>
			</div>
			<%= render 'shared/search' %>
		</div>

  </div>
</div>
<!-- end topbar -->
<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>