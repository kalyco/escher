<% provide(:title, t(".title")) %>

<div class="home-hero">
  <%= render "shared/navigation" %>
  <!-- hero-content -->
  <div class="home-hero-content">
    <div class="center-panel">
      <h1 class="home-hero-content-header">
        <%= t(".header") %>
      </h1>
      <h3 class="home-hero-content-subheader">
        <%= t(".subheader") %>
