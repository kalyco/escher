@font-face {
  font-family: 'RobotoSlab-Regular';
  src: font-url('RobotoSlab-Regular.ttf');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'RobotoSlab-Light', sans-serif;
  src: font-url('RobotoSlab-Light.ttf');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Diplomata SC', cursive;
}

@font-face {
  font-family: 'Revalia';
}

@font-face {
  font-family: 'RobotoSlab-Thin', sans-serif;
  src: font-url('RobotoSlab-Thin.ttf');
  font-weight: normal;
  font-style: none;
}

@font-face {
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

$default: "Helvetica Neue", Helvetica, Arial, sans-serif;
$light-robo: 'RobotoSlab-Light', sans-serif;
$thin-robo: 'RobotoSlab-Thin', sans-serif;

body {
  font-family: $default;
}

footer {
  font-family: $default;
}