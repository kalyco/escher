.button.ico.arrow-right {
    background: 0 0;
    border-radius: 2px;
    color: inherit;
    cursor: pointer;
    display: inline-block;
    font-family: "Proxima N W02 Smbd",Helvetica,Arial,Verdana,sans-serif;
    height: 60px;
    line-height: 60px;
    outline: 0;
    padding: 0 13px 0 25px;
    position: relative;
    transition: all .3s;
    text-decoration: none;
}


.button.ico.arrow-right span:before {
    content: "\f054";
    margin: 0 0 0 15px;
}

.button {
    font-size: 12px;
    letter-spacing: 2px;
    text-transform: uppercase;
    border: 2px solid #2a2e31;
}

a.gallery, a.gallery:visited {
    color: #fff;
    outline: 0;
    text-decoration: none;
    transition: color 250ms ease-out 0s;
}

.button.ico span:before {
    font-family: FontAwesome;
    font-size: 22px;
    line-height: 56px;
    margin: 0 0 0 35px;
    text-transform: none;
}

.button.ico.arrow-right:after {
    background: black;
    content: '';
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    transition: all .3s;
    width: 0;
    z-index: -1;
    box-sizing: border-box
}