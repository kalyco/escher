a.button.ico.arrow-down {
    background: 0 0;
    border-radius: 2px;
    color: inherit;
    cursor: pointer;
    display: inline-block;
    font-family: "Proxima N W02 Smbd",Helvetica,Arial,Verdana,sans-serif;
    height: 60px;
    line-height: 60px;
    outline: 0;
    padding: 0 10px 0 20px;
    transition: background-position 1s;
    position: relative;
    text-decoration: none;
    background-size: 100% 200%;
    background-image: linear-gradient(to bottom, white 50%, #161616 50%);
    -webkit-transition: background-position .4s;
    -moz-transition: background-position .4s;
    transition: background-position .4s;
}

a.button.ico:hover {
    background-position: 0 -100%;
    color: #505358;
}

.button.ico.arrow-down span:before {
    content: "\f107";
    margin: 0 0 0 15px;
}

.button {
    letter-spacing: 2px;
    text-transform: uppercase;
    border: 2px solid #2a2e31;
}

a.button.ico, a.button.ico:visited {
    outline: 0;
    text-decoration: none;
    transition: color 250ms ease-out 0s;
}

.button.ico span:before {
    font-family: FontAwesome;
    line-height: 56px;
    margin: 10px 0 0 35px;
    text-transform: none;
}
