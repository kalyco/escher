$m-top2: -250px;
$m-top3: 0;


.fadein {
    height: 100%;
    position:relative;
    top: 20px;
    margin: auto;
}
.fadein img {
    margin-right: 10px;
    width: 350px;
    height: 250px;
    position: relative;
    top:0;
    bottom: 0;
    right: 0;
    left: 0;
    -webkit-animation-name: fade;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-duration: 12s;
    animation-name: fade;
    animation-iteration-count: infinite;
    animation-duration: 12s;
}

span.images {
    left: 0px;
    right: 0px;
    top: 0px;
    bottom: 0px;
}

.featured_image, .about_image, .technique_image {
    top: 20px;
    position: relative;
    background-size: 100% 250px;
    width: 350px;
    height: 250px;
    border-style: solid;
    border-color: black;
}


.featured_image {
    background-image: url("<%= asset_path 'rippled_surface_signed.jpg' %>");
    border-style: solid;
    border-color: black;
}

.about_image {
    background-image: url("<%= asset_path 'escher_self.jpg' %>");
}

.technique_image {
    background-image: url("<%= asset_path 'drawing_hands.jpg' %>");
    height: 257px;
}

.gallery_fade_image {
    border-style: solid;
    border-color: black;
}
.original_fade_image {
    border-style: solid;
    border-color: black;
}

@-webkit-keyframes fade {
    0% {opacity: 0;}
    20% {opacity: 1;}
    33% {opacity: 1;}
    53% {opacity: 0;}
    100% {opacity: 0;}
}
@keyframes fade {
    0% {opacity: 0;}
    20% {opacity: 1;}
    33% {opacity: 1;}
    53% {opacity: 0;}
    100% {opacity: 0;}
}

#gallery3 {
    z-index: 1;
    margin-top: $m-top3;
}

#gallery2, #original2 {
    -webkit-animation-delay: -4s;
    margin-top: $m-top2;
    z-index: 2;
}
#gallery1, #original1 {
    -webkit-animation-delay: -8s;
    margin-top: $m-top2;
    z-index: 3;
}