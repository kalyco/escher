.fadein {
    width: 85%;
    height: 100%;
    position:relative;
    top: 20px;
    margin:auto;
    left: 20%;
}
.fadein img {
    width: 100%;
    height: 250px;
    position:absolute;
    top:0;
    -webkit-animation-name: fade;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-duration: 12s;
    animation-name: fade;
    animation-iteration-count: infinite;
    animation-duration: 12s;
}

.featured_image {
    background-image: url("<%= asset_path 'rippled_surface_signed.jpg' %>");
    background-size: 100% 250px;
    width: 90%;
    height: 250px;
    position:absolute;
    top:0;
    left:-70px;
    border-style: solid;
    border-color: black;
}

