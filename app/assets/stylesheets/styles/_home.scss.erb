//wraps the hero section

.home-hero {
  height: 295px;
  width: 100%;
  float: right;
  clear: both;
  background-position: center center;
  background-size: cover;
  @media($mobile) {
    height: 200px;
  }
}

//menu icon

.glyphicon-menu-hamburger {
  text-decoration: none;
  font-size: 3vw;
  position: relative;
  color: inherit;
  width: 10%;
  height: 10%
}

//wraps the topbar

.topbar-wrapper {
  display: block;
  height: 400px;
  width: 100%;
  position: absolute;
  top: 0px;
  right: 0px;
  background: linear-gradient( rgba(0, 0, 0, 0.91), rgba(0, 0, 0, 0.91) ), url('<%=asset_path 'small_steps.png' %>');
}

#topbar-container {
  padding: 10px 15px;
}

//navigation links

.topbar-content {
	width: 100%;
  display:-webkit-flex;
	justify-content: center;
  font-size: 26px;


  .topbar-links:hover {
  }

  .topbar-links:nth-last-of-type(1) {
    padding-right: 0;
  }
}

a.topbar-links {  
	display:-webkit-flex;
  color: white;
  text-decoration: none;
}

.main_row1, .main_row2, .main_row3 {
    columns: 12;
    margin: 50px 0 100px 0;
}

.main_row3 {
  top: 20px;
  display:-webkit-flex;
  justify-content: center;
}


.home-hero-content {
  z-index: 1;
  display:-webkit-flex;
  justify-content: space-around;
  width: 100%;
  @include outer-container;
  padding: 85px 15px 0;

  .home-hero-content-header {
    font-size: 4.6em;
    font-weight: 100;
  }

  .home-hero-content-subheader {
    font-size: 1.5em;
    font-weight: 100;
  }
}

.center-panel {
  width: 100%;
  z-index: 1;
  color: #bbbab7;
  height: 50%;
  text-align: center;
}

ul { 
  list-style-type: none;
}

// main content

.main-content {
  position: relative;
  display:-webkit-flex;
  align-items: center; 
  flex-direction: column;
  width: 100%;
  clear: both;
  top: 500px;

  .main-content-image {
    margin: auto;
    max-width: 393px;
    width: 393px;
    height: 30%;
    position: relative;
    img.hand_portrait {
      position: absolute;
      bottom: -5px;
    }
  }
}
.main-box {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  top: 500px;
  width: 90%;
  height: 1000px;
  overflow:hidden;
  border: 15px groove #505358;
  box-shadow: 50px -16px #F44336;
  box-sizing: border-box;
  .main-box-content {
    font-size: 16px;
    display:-webkit-flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
  }
  
  .section_description {
    margin: auto;  
  }
}
.triangles {
  position: absolute;
  top: -395px;
  z-index: -1;
  width: 100%;
  display:-webkit-flex;
  justify-content: space-between;
  flex-direction: row;
}

.right-triangle {
  border-width: 0 150px 150px 0;
  border-color: transparent #F44336 transparent transparent;
}
.right-triangle, .left-triangle {
  width: 0;
  height: 0;
  border-style: solid;
}

.left-triangle {
  border-width: 150px 150px 0 0;
  border-color: #F44336 transparent transparent transparent;
}
