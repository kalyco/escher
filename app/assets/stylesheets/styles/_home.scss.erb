//wraps the hero section

.home-hero {
  height: 500px;
  width: 100%;
  float: right;
  clear: both;
  background-position: center center;
  background-size: cover;
  @media($mobile) {
    height: 200px;
  }
}

.home-hero-content {
  display: flex;
  justify-content: space-around;
  width: 100%;
  @include outer-container;
  padding: 85px 15px 0;

  .left-panel {

    .home-hero-content-header {
      text-align: center;
      font-size: 4.6em;
      font-weight: 100;
    }

    .home-hero-content-subheader {
      text-align: center;
      font-size: 1.5em;
      font-weight: 100;
    }
  }

  .right-panel {
    width: 300px;
    height: 300px;
    display: flex;
    background-image: url('<%=asset_path 'bird_fish.jpg' %>');
  }
}

ul { 
  list-style-type: none;
}
