//wraps the hero section

.home-hero {
  height: 500px;
  width: 100%;
  float: right;
  clear: both;
  background-position: center center;
  background-size: cover;
  @media($mobile) {
    height: 200px;
  }
}

//menu icon

.glyphicon-menu-hamburger {
  text-decoration: none;
  font-size: 4vw;
  position: relative;
  color: inherit;
  width: 10%;
  height: 10%
}

//wraps the topbar

.topbar-wrapper {
  display: block;
  height: 400px;
  width: 100%;
  position: absolute;
  top: 0px;
  right: 0px;
  background: linear-gradient( rgba(0, 0, 0, 0.91), rgba(0, 0, 0, 0.91) ), url('<%=asset_path 'small_steps.png' %>');
}

#topbar-container {
  padding: 10px 15px;
}

//navigation links

.topbar-content {
	width: 100%;
  display: flex;
	justify-content: center;
  font-size: 26px;

  .topbar-links {  
		display: flex;
  	font-family: "RobotoSlab-Regular";
    color: white;
    text-decoration: none;
  }

  .topbar-links:hover {
  }

  .topbar-links:nth-last-of-type(1) {
    padding-right: 0;
  }
}

.home-hero-content {
  display: flex;
  justify-content: space-around;
  width: 100%;
  @include outer-container;
  padding: 85px 15px 0;

  .center-panel {
    position: absolute;
    width: 50%;
    color: #bbbab7;
    width: 50%;
    height: 50%;

    .home-hero-content-header {
      text-align: center;
      font-size: 4.6em;
      font-weight: 100;
    }

    .home-hero-content-subheader {
      text-align: center;
      font-size: 1.5em;
      font-weight: 100;
    }
  }
}


ul { 
  list-style-type: none;
}

// main content

.main-content {
  top: 40%;
  height: 1000px;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center; 
  flex-direction: column;
  width: 100%;
  clear: both;
  @media all and (max-width: 980px) {
    top: 260px;
  }
  @media($mobile) {
    height: 200px;
  }

  .main-content-image {
    width: 295px;
    height: 400px;
    position: relative;
    background-image: url(<%='self-portrait.png'%>);

  }
  .main-box {
    width: 70%;
    height: 67%;
    top: 200px;
    border: 15px groove #505358;
    box-shadow: 60px -16px teal;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    .main-box-content {
      margin: auto;
      text-align: center;
      padding: 10px 0 10px 10px;
    }
    .section_description {
      margin: auto;  
    }
  }
  .border-left,  .border-right {
    z-index: -1;
    height: 100%;
    width: 5%;
    position: absolute;
    right: 95%;
    background: linear-gradient( rgba(0, 0, 0, 0.91), rgba(0, 0, 0, 0.91) ), url('<%=asset_path 'small_steps.png' %>')
  }
  .border-right {
    left: 95%;
    .right-triangle {
      right: 100px;
      float: left;
      border-width: 0 100px 100px 0;
      border-color: transparent teal transparent transparent;
    }
  }
  .right-triangle, .left-triangle {
    position: relative;
    margin-left: auto;
    top: 105px;
    width: 0;
    height: 0;
    border-style: solid;
  }
  .border-left {
    right: 95%;
    .left-triangle {
      left: 100px;
      float: right;
      border-width: 100px 100px 0 0;
      border-color: teal transparent transparent transparent;
    }
  }
}

.slider{
  width:400px;
  margin:20px auto;
  text-align: center;
  padding:20px;
  .parent-slide{padding:15px;}
  img{display: block;margin:auto;}
}
