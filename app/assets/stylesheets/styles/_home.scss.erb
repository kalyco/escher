//wraps the hero section

.home-hero {
  height: 500px;
  width: 100%;
  float: right;
  clear: both;
  background-position: center center;
  background-size: cover;
  @media($mobile) {
    height: 200px;
  }
}

//menu icon

.glyphicon-menu-hamburger {
  text-decoration: none;
  font-size: 4vw;
  position: relative;
  color: inherit;
  width: 10%;
  height: 10%
}

//wraps the topbar

.topbar-wrapper {
  display: block;
  height: 100px;
  width: 100%;
  position: absolute;
  top: 0px;
  right: 0px;
  background: linear-gradient( rgba(0, 0, 0, 0.91), rgba(0, 0, 0, 0.91) ), url('<%=asset_path 'small_steps.png' %>');
}

#topbar-container {
  @include outer-container;
  padding: 10px 15px;
}

//navigation links

.topbar-content {
	width: 100%;
  display: flex;
	justify-content: space-between;
  padding: 15px 15px 0 0;
  font-size: 26px;

  .topbar-links {  
		display: flex;
  	font-family: "RobotoSlab-Regular";
    color: white;
    text-decoration: none;
  }

  .topbar-links:hover {
  }

  .topbar-links:nth-last-of-type(1) {
    padding-right: 0;
  }
}

.home-hero-content {
  display: flex;
  justify-content: space-around;
  width: 100%;
  @include outer-container;
  padding: 85px 15px 0;

  .left-panel {

    .home-hero-content-header {
      text-align: center;
      font-size: 4.6em;
      font-weight: 100;
    }

    .home-hero-content-subheader {
      text-align: center;
      font-size: 1.5em;
      font-weight: 100;
    }
  }

  .right-panel {
    width: 300px;
    height: 300px;
    display: flex;
    background-image: url('<%=asset_path 'bird_fish.jpg' %>');
  }
}

ul { 
  list-style-type: none;
}
