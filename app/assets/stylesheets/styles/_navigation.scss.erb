//frame
.nav-frame {
  position: relative;
  box-shadow: 0px 4px 10px 0 rgba(22, 22, 22, 0.08);
  z-index: 1;
  height: 20vh;
  overflow: hidden;
}

//main
.main-nav {
  position: absolute;
  padding: 1em;
  width: 100%;
  height: 100%;
  margin-top: 0;
  background: linear-gradient( rgba(0, 0, 0, 0.91), rgba(0, 0, 0, 0.91) ), url('<%=asset_path 'small_steps.png' %>');
  @include outer-container;
  .navbar-left, .navbar-right {
    @include span-columns(6);
    width: 50%;
    height: 100%;
    @include omega();
  }
}

//menu icon

.nav-menu {
  @include span-columns(1);
  position: relative;
  height: 100%;
    .glyphicon-menu-hamburger {
    text-decoration: none;
    font-size: 4vw;
    color: inherit;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    cursor: pointer;
    &:hover {
      opacity: .75;
    }
  }
}

//navigation links

.topbar-content {
	width: 100%;
  display: flex;
	justify-content: space-between;
  padding: 15px 15px 0 0;
  font-size: 26px;

  .topbar-links {  
		display: flex;
  	font-family: "RobotoSlab-Regular";
    color: white;
    text-decoration: none;
  }

  .topbar-links:hover {
  }

  .topbar-links:nth-last-of-type(1) {
    padding-right: 0;
  }
}

.glyphicon {
  @media only screen and (max-width: 500px) {
    font-size: 1.5em;
  }
}
