.box {
	background: {
		color: rgba(37, 101, 132, 0.3);
	}
    width: $width ;
    height: $height ;
    margin: auto;
    border:$border;
    text-align: center;
    color: #fff; 
    position:relative;
    top: 200px;
    cursor: pointer;
    transition: ($transition_duration*$pipes)+$transition_duration ease;
    #close_circle {
        display: none;
    }
    &:before {
        position: absolute; 
        width: 0; 
        height:$stroke; 
        content: ''; 
        background: #fff;
        top:-$stroke; 
        left:-$stroke; 
        @include border-animation( width, ease, 3);
    }
    &:after {
        position: absolute; 
        width:$stroke; 
        height:0;
        content: ''; 
        background: #fff; 
        top:-$stroke; 
        right: -$stroke; 
        @include border-animation( height, ease, 2);
    }
    &-inner:after{
        position: absolute; 
        width: 0; 
        height:$stroke; 
        content: ''; 
        background: #fff; 
        bottom:-$stroke; 
        right: -$stroke;
        @include border-animation( width, ease, 1);
    }
    &-inner:before {
        position: absolute; 
        width: $stroke; 
        height:0;content: ''; 
        background: #fff; 
        bottom:-$stroke; 
        left: -$stroke; 
        @include border-animation( height, ease, 0); 
    }
    &:hover{
        border-color:transparent;
        p.label_techniques span {
        	display:none;
        }
        .techniques_content {
			display: flex;
            font-family: 'Taviraj', serif;
			justify-content: space-between;
			flex-direction: column;
			margin: 15px;
			h4 {
                font-size: 19px;
				text-align: center;
			}
			animation: fadein 3s;
			-moz-animation: fadein 3s; /* Firefox */
			-webkit-animation: fadein 3s; /* Safari and Chrome */
			-o-animation: fadein 3s; /* Opera */
			@keyframes fadein {
			    from {
			        opacity:0;
			    }
			    to {
			        opacity:1;
			    }
			}
			@-moz-keyframes fadein { /* Firefox */
			    from {
			        opacity:0;
			    }
			    to {
			        opacity:1;
			    }
			}
			@-webkit-keyframes fadein { /* Safari and Chrome */
			    from {
			        opacity:0;
			    }
			    to {
			        opacity:1;
			    }
			}
			@-o-keyframes fadein { /* Opera */
			    from {
			        opacity:0;
			    }
			    to {
			        opacity: 1;
			    }
			}
        }
        background:darken($primary_color,30);
        &:before{
            width: $pipeline_width; 
            @include border-animation( width, ease, 0); 
        }
        &:after {
            height:$pipeline_height; 
            @include border-animation( height, ease, 1); 
        }
        .box-inner:after {
            width: $pipeline_width; 
            @include border-animation( width, ease, 2);
        }
        .box-inner:before {
            height:$pipeline_height; 
            @include border-animation( height, ease, 3);
        }
    }
}

