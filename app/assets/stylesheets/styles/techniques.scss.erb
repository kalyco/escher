$width  : 900px;
$height : 700px;
$primary_color : #3084AC;
$border_color--hover : lighten($primary_color, 80);
$stroke : 2px;
$border: $stroke solid darken($primary_color,10);
$transition_duration:300ms;
$pipeline_width: $width+$stroke;
$pipeline_height: $height+$stroke;
$pipes : 4;

@function border-pipeline ($transition_duration, $pipe) {
    @return $transition_duration*$pipe;
}

@mixin border-animation($dimension, $easing ,$pipe ) 
{
    transition: $transition_duration  $dimension $easing border-pipeline($transition_duration,$pipe);
    -web-kit-transition: $transition_duration  $dimension $easing border-pipeline($transition_duration,$pipe);
}

.technique_hero {
	margin:0;
	padding:0;
	background-image: url(<%= asset_path('escher_background1.jpg') %>);
	background-repeat: no-repeat;
}

.techniques_content {
	display: none;
}

p.label_techniques {
	position: relative;
	font-size: 40px;
	font-family: 'RobotoSlab-Thin', sans-serif;
	text-align: center;
	opacity: 1;
	top: 40%;
}

.box {
	background: {
		color: rgba(37, 101, 132, 0.3);
	}
    width: $width ;
    height: $height ;
    margin: auto;
    border:$border;
    text-align: center;
    color: #fff; 
    position:relative;
    top: 200px;
    cursor: pointer;
    transition: ($transition_duration*$pipes)+$transition_duration ease;
    &:before {
        position: absolute; 
        width: 0; 
        height:$stroke; 
        content: ''; 
        background: #fff;
        top:-$stroke; 
        left:-$stroke; 
        @include border-animation( width, ease, 3);
    }
    &:after {
        position: absolute; 
        width:$stroke; 
        height:0;
        content: ''; 
        background: #fff; 
        top:-$stroke; 
        right: -$stroke; 
        @include border-animation( height, ease, 2);
    }
    &-inner:after{
        position: absolute; 
        width: 0; 
        height:$stroke; 
        content: ''; 
        background: #fff; 
        bottom:-$stroke; 
        right: -$stroke;
        @include border-animation( width, ease, 1);
    }
    &-inner:before {
        position: absolute; 
        width: $stroke; 
        height:0;content: ''; 
        background: #fff; 
        bottom:-$stroke; 
        left: -$stroke; 
        @include border-animation( height, ease, 0); 
    }
    &:hover{
        border-color:transparent;
        p.label_techniques span {
        	display:none;
        }
        .techniques_content {
			display: flex;
			justify-content: space-between;
			flex-direction: column;
			margin: 10px;
			h4 {
				text-align: center;
			}
			animation: fadein 3s;
			-moz-animation: fadein 3s; /* Firefox */
			-webkit-animation: fadein 3s; /* Safari and Chrome */
			-o-animation: fadein 3s; /* Opera */
			@keyframes fadein {
			    from {
			        opacity:0;
			    }
			    to {
			        opacity:1;
			    }
			}
			@-moz-keyframes fadein { /* Firefox */
			    from {
			        opacity:0;
			    }
			    to {
			        opacity:1;
			    }
			}
			@-webkit-keyframes fadein { /* Safari and Chrome */
			    from {
			        opacity:0;
			    }
			    to {
			        opacity:1;
			    }
			}
			@-o-keyframes fadein { /* Opera */
			    from {
			        opacity:0;
			    }
			    to {
			        opacity: 1;
			    }
			}
        }
        background:darken($primary_color,30);
        &:before{
            width: $pipeline_width; 
            @include border-animation( width, ease, 0); 
        }
        &:after {
            height:$pipeline_height; 
            @include border-animation( height, ease, 1); 
        }
        .box-inner:after {
            width: $pipeline_width; 
            @include border-animation( width, ease, 2);
        }
        .box-inner:before {
            height:$pipeline_height; 
            @include border-animation( height, ease, 3);
        }
    }
}

a.sun_and_moon {
	color: $escher-orange;
    img {
        opacity: 1;
        transition: opacity 1s ease-in-out;
        -moz-transition: opacity 1s ease-in-out;
