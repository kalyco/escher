$bg-path: url('<%=asset_path 'footer_lodyas.png' %>');
$dark_background: linear-gradient( rgba(0, 0, 0, 0.91), rgba(0, 0, 0, 0.91) ), url('<%=asset_path 'footer_lodyas.png' %>');
$light_background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url('<%=asset_path 'footer_lodyas.png' %>');

.show_main_content {
	position: relative;
	height: 1200px;
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	z-index: 1;
	top: 100px;
	background: rgba(0, 0, 0, 0.91);
    background: $light_background;
}

.piece_header {
	margin-top: 20px;	
	text-align: center;
	width: 100%;
	font-size: 50px;
	color: white;
	font-family: 'Revalia';
}

.show_main_image_wrapper {
  top: 50px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  flex-direction: row;
  align-items: center;
  margin-bottom: 50px;
	.show_main_image {
		z-index: 1;
	    position: relative;
    	width: 100%;
    	min-height: 637px;
		background-image: url(<%= asset_path("pieces/hell_bosch.jpg")%>);
		background-repeat: no-repeat;
		border: 15px groove rgba(21, 21, 21, 1);
		background-position: center center;
  		box-sizing: border-box;
	}
}

.image_wrapper {
	top: 25px;
	position: relative;
	padding: 0;
    min-width: 530px;
    display:block;
}

.description_text {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    color: white;
    font-family: 'Revalia';
    font-size: 32px;
    background-color: #333333;
    line-height:100px;
    text-align: center;
    z-index: 10;
    opacity: 0;
    -webkit-transition: all 1s ease;
    -moz-transition: all 1s ease;
    -o-transition: all 1s ease;
    transition: all 1s ease;
}
.description_text:hover {
    opacity: 0.7;
}

.styled_line2 {
    width: 112px;
    height: 47px;
    border-bottom: 10px solid rgba(0, 0, 0, 0.91);
    -webkit-transform:
        translateY(20px)
        translateX(5px)
        rotate(-26deg);
    position: absolute;
    top: 500px;
    left: -80%;
    z-index: 2;
}

.show_description {
	text-align: center;
	width: 65%;
	font-size: 32px;
	color: white;
	font-family: 'Revalia';
}

.left-show-triangle {
	position: relative;
	width: 25%;
  	top: 0;
	height: 0;
	border-style: solid;
	border-width: 50px 0 50px 100px;
	border-color: transparent transparent transparent black;
	background: linear-gradient(to right, #151515, #333333);
}

.right-show-triangle {
	position: relative;
	width: 25%;
  	top: 0;
	height: 0;
	border-style: solid;
	border-width: 50px 100px 50px 0;
	border-color: transparent black transparent transparent;
}

a.show-link {
	position: relative;
	text-align: center;
	font-size: 3vw;
	color: black;
	margin: 5px;
	padding: 2px;
}
