$bg-path: url('<%=asset_path 'small_steps.png' %>');
$dark_background: linear-gradient( rgba(0, 0, 0, 0.91), rgba(0, 0, 0, 0.91) ), url('<%=asset_path 'small_steps.png' %>');
$light_background: linear-gradient( rgba(0, 0, 0, 0.71), rgba(0, 0, 0, 0.71) ), url('<%=asset_path 'small_steps.png' %>');

.show_main_content {
	position: absolute;
	height: 1200px;
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	z-index: 1;
	top: 110px;
	background: rgba(0, 0, 0, 0.91);
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.91), rgba(0, 0, 0, 0)), $bg-path;
}

.piece_header {
	text-align: center;
	width: 100%;
	font-size: 50px;
	color: white;
	font-family: 'Revalia';
}

.show_main_image_content {
  top: 50px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  flex-direction: row;
  align-items: center;
  margin-bottom: 50px;
	.show_main_image {
		top: 25px;
	    position: relative;
    	background-size: 100% 500px;
    	width: 100%;
  		max-width: 500px;
  		min-width: 300px;
    	height: 500px;
		background-image: url(<%= asset_path("pieces/hell_bosch.jpg")%>);
		border: 15px groove rgba(21, 21, 21, 1);
  		box-sizing: border-box;
	}
}

.styled_line2 {
    width: 112px;
    height: 47px;
    border-bottom: 10px solid rgba(0, 0, 0, 0.91);
    -webkit-transform:
        translateY(20px)
        translateX(5px)
        rotate(-26deg);
    position: absolute;
    top: 500px;
    left: -80%;
    z-index: 2;
}

.show_description {
	text-align: center;
	width: 65%;
	font-size: 32px;
	color: white;
	font-family: 'Revalia';
}

.left-show-triangle {
	position: relative;
	width: 25%;
  	top: 0;
	height: 0;
	border-style: solid;
	border-width: 50px 0 50px 100px;
	border-color: transparent transparent transparent #151515;
	background: linear-gradient(to right, #151515, #333333);
}

.right-show-triangle {
	position: relative;
	width: 25%;
  	top: 0;
	height: 0;
	border-style: solid;
	border-width: 50px 100px 50px 0;
	border-color: transparent #151515 transparent transparent;
}

a.previous-link {
	position: relative;
	text-align: center;
	width: 20%;
	font-size: 20px;
	color: white;
	border-style: solid;
	border-width: 2px;
	margin-right: 5px;
}

a.next-link {
	position: relative;
	text-align: center;
	width: 20%;
	font-size: 20px;
	border-style: solid;
	border-width: 2px;
	margin-left: 5px;
	color: white;
}